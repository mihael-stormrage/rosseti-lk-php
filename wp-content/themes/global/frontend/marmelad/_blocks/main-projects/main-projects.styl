.main-projects
    margin-bottom 55px

    @media screen and (max-width 645px)
        margin-bottom 15px

    &__section
        display flex
        width 820px
        max-width 100%
        margin 0 auto

        @media screen and (max-width 645px)
            flex-direction column
            align-items center

    &__icons
        width 237px
        display flex
        flex-wrap wrap
        margin-right 60px

        @media screen and (max-width 645px)
            margin-right 0

    &__icon
        width 76px
        height 77px
        text-align center

    &__img
        width 55px
        height 52px
        margin auto
        position relative
        &:after
            content ''
            position absolute
            right -5px
            bottom 0
            width 39px
            height 36px
            border-radius 50%
            box-shadow inset 2px 6px 16px rgba(0, 0, 0, 0.08)
            background-color rgba(0,168,184,0.188)

    &__name
        font-size 14px
        color #000
        font-weight 400    

    &__body
        width 520px
        max-width 100%
        padding-top 5px

    &__title
        font-size 43px
        font-family : $fonts.headings
        color #13232a
        font-weight 500
        line-height 1.2 
        margin-bottom 30px

        @media screen and (max-width 645px)
            font-size 36px
            text-align center

        @media screen and (max-width 480px)
            margin-bottom 15px    
    
    &__desc
        font-size 14px
        color #333
        font-weight 600
        line-height 1.8
        padding-right 80px

        p
            margin-bottom 10px

        @media screen and (max-width 645px)
            padding-right 0