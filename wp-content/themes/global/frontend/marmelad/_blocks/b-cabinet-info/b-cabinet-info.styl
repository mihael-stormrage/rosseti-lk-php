.b-cabinet-info

    &__body
        display flex
        justify-content space-between

        @media screen and (max-width 639px)
            flex-direction column

    &__items
        width 540px
        max-width 100%

        @media screen and (max-width 1023px)
            margin-right 20px

        @media screen and (max-width 639px)
            order 1    

    &__user-info
        display flex
        flex-direction column

        .b-form-checkbox__title
            padding-left 35px

        @media screen and (max-width 639px)
            align-items center
            
        .b-form-checkbox__items
            @media screen and (max-width 480px)
                width 100%

    &__title
        font-size 14px
        color #333
        font-weight 400
        margin-bottom 15px
        
    &__modify
        display flex
        align-items center
        margin-bottom 35px

        @media screen and (max-width 480px)
            margin-bottom 15px

    &__text
        font-size 16px
        color #333
        font-weight 700
        margin-right 18px
        letter-spacing 0.95px
        flex 1 1 auto

        &--mod-text
            white-space nowrap
            overflow hidden
            text-overflow ellipsis

        &--border-bot
            border-bottom 1px solid #008ed7

    &__edit

        // a
        span,
        button
            display inline-block
            vertical-align top
            border none
            background-color transparent
            cursor pointer
            padding 0	

        svg
            transition fill .3s
            &:hover
                fill #008ed7

        .svg-icon--edit-01
            width 34px
            height 34px        

        .svg-icon--save-01
            width 34px
            height 34px

    &__user-date
        width 100%
        font-size 16px
        color #333
        font-weight 700
        margin-right 18px
        letter-spacing 0.95px     
        border none 
        background-color transparent   
            

        
