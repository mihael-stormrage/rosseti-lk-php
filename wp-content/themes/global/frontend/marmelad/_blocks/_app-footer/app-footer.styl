.app-footer
    flex none
    margin-top 140px 
    padding 50px 0 50px 0
    background-color #fff
    @media all and (max-width 600px)
        margin-top 70px
    @media all and (max-width 425px)
        margin-top 30px
    &__wrap 
        display flex 
        justify-content space-between 
        @media all and (max-width 600px)
            flex-direction column
            align-items center
    &__all-rights 
        color #333333
        font-family : $fonts.base
        display flex 
        align-items center
        font-size 11px
        font-weight 400
        line-height 1
        letter-spacing 0.22px
        @media all and (max-width 600px)
            padding-bottom 10px    

.app--main
    .app-footer
        background-color transparent
        @media all and (max-width 600px)
            margin-top 30px
        @media all and (max-width 425px)
            margin-top 0px